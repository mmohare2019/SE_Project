extends layout

block content
  h1 #{title}

  h2 #{first_name}
  h2 #{last_name}
  h2 #{email}
  h2 #{password}

  form(method='POST' action='')
    div.form-group
      label(for='name') First name:
      input#name.form-control(type='text', placeholder='Enter first name' name='first_name' value="")
      br
      label(for='last-name') Last name:
      input#name.form-control(type='text', placeholder='Enter last name' name='last_name' value="")
      br
      label(for='email') Email:
      input#name.form-control(type='email', placeholder='Email' name='email' value="")
      br

      label(for='password') Password:
      input#name.form-control(type='password', placeholder='Password' name='password' value="")
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg